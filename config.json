{
  "paths": {
    "data_dir": "/Volumes/MyDrive/Research/Super-Resolution/probav_data/",
    "checkpoint_dir": "../checkpoints",
    "tb_log_file_dir": "../tb_logs/",
    "submission_dir": "../submission"
  },

  "network": {
    "encoder": {
      "in_channels": 1,
      "num_res_blocks" : 2,
      "kernel_size": 3,
      "channel_size": 64
    },
    "fusion": {
      "in_channels": 64,
      "num_hidden_layers" : 2,
      "hidden_channels": [64, 64],
      "kernel_sizes": [3, 3]
    },
    "decoder": {
      "deconv": {
        "in_channels": 64,
        "kernel_size": 3,
        "stride": 3,
        "out_channels": 64
      },
      "final": {
        "in_channels": 64,
        "kernel_size": 1,
        "out_channels": 1
      }
    }
  },

  "training": {
     "num_epochs": 400,
     "batch_size": 16,

     "min_L": 32,
     "n_views": 32,
     "n_workers": 4,
     "crop": 3,


     "lr": 0.0007,
     "lr_step": 2,
     "lr_decay": 0.97,

     "load_lr_maps": false,
     "beta": 50.0,

    "create_patches": true,
    "patch_size": 64,
    "val_proportion": 0.10,
    "lambda": 0.000001
  }

}
